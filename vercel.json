{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/build",
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "frontend/build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/index.html"
        }
    ],
    "env": {
        "HUGGING_FACE_API_KEY": "@hugging_face_api_key",
        "FLASK_ENV": "production",
        "FLASK_DEBUG": "False"
    },
    "github": {
        "silent": true
    }
}
